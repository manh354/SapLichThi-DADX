@page "/evaluation"
@using WebInterface.Services
@inject SchedulingService Scheduler

<PageTitle>Evaluation Statistics</PageTitle>

<h1>Evaluation Statistics</h1>

@if (Scheduler.EvaluationMetrics.Count == 0)
{
    @if (Scheduler.CurrentSchedule == null)
    {
        <div class="alert alert-warning">No schedule available. Please run a benchmark first.</div>
    }
    else
    {
         <div class="alert alert-info">No detailed metrics available.</div>
    }
    <a href="/" class="btn btn-secondary">Go to Dashboard</a>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Metrics
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var metric in Scheduler.EvaluationMetrics)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @metric.Key
                            <span class="badge bg-primary rounded-pill">@metric.Value</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}
